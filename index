    <div class="container">
        <!-- Header -->
        <div class="header">
            <input
                type="text"
                id="productName"
                placeholder="Produktname eingeben..."
                class="product-name"
            />
            <p class="subtitle">Business Entscheidungs-Analyzer</p>
            
            <!-- Scores -->
            <div class="score-container">
                <div class="score-card pro">
                    <div class="score-title">‚úÖ PRO</div>
                    <div class="score-value" id="proScore">0</div>
                    <div class="score-details" id="proCount">0 Argumente</div>
                </div>
                
                <div class="score-card result">
                    <div class="score-title">üèÜ ERGEBNIS</div>
                    <div class="score-value" id="winner" style="font-size: 1.2rem;">Unentschieden</div>
                    <div class="score-details" id="difference">Differenz: 0</div>
                </div>
                
                <div class="score-card contra">
                    <div class="score-title">‚ùå CONTRA</div>
                    <div class="score-value" id="contraScore">0</div>
                    <div class="score-details" id="contraCount">0 Argumente</div>
                </div>
            </div>
            
            <!-- Tabs -->
            <div class="tabs">
                <div class="tab-container">
                    <button id="proTab" class="tab pro active" onclick="switchTab('pro')">
                        Pro-Argumente
                    </button>
                    <button id="contraTab" class="tab contra" onclick="switchTab('contra')">
                        Contra-Argumente
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Content -->
        <div class="content">
            <!-- Pro Section -->
            <div id="proSection" class="section active">
                <div class="section-header">
                    <h2 class="section-title pro">Pro-Argumente</h2>
                    <button class="add-btn pro" onclick="addArgument('pro')">
                        <span>+</span>
                        Argument hinzuf√ºgen
                    </button>
                </div>
                
                <div id="proArguments">
                    <div class="empty-state">
                        <p><strong>Noch keine Pro-Argumente hinzugef√ºgt.</strong></p>
                        <p>Klicke auf "Argument hinzuf√ºgen" um zu beginnen.</p>
                    </div>
                </div>
            </div>
            
            <!-- Contra Section -->
            <div id="contraSection" class="section">
                <div class="section-header">
                    <h2 class="section-title contra">Contra-Argumente</h2>
                    <button class="add-btn contra" onclick="addArgument('contra')">
                        <span>+</span>
                        Argument hinzuf√ºgen
                    </button>
                </div>
                
                <div id="contraArguments">
                    <div class="empty-state">
                        <p><strong>Noch keine Contra-Argumente hinzugef√ºgt.</strong></p>
                        <p>Klicke auf "Argument hinzuf√ºgen" um zu beginnen.</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Footer -->
        <div class="footer">
            <p>üí° <strong>Tipp:</strong> Bewerte die Wichtigkeit jedes Arguments durch die Punkte-Gewichtung</p>
        </div>
    </div>

    <script>
        let proArguments = [];
        let contraArguments = [];
        let argumentCounter = 0;

        function switchTab(tab) {
            // Update tabs
            const proTab = document.getElementById('proTab');
            const contraTab = document.getElementById('contraTab');
            const proSection = document.getElementById('proSection');
            const contraSection = document.getElementById('contraSection');
            
            if (tab === 'pro') {
                proTab.classList.add('active');
                contraTab.classList.remove('active');
                proSection.classList.add('active');
                contraSection.classList.remove('active');
            } else {
                contraTab.classList.add('active');
                proTab.classList.remove('active');
                contraSection.classList.add('active');
                proSection.classList.remove('active');
            }
        }

        function addArgument(type) {
            argumentCounter++;
            const newArgument = {
                id: argumentCounter,
                title: '',
                description: '',
                points: 1
            };

            if (type === 'pro') {
                proArguments.push(newArgument);
            } else {
                contraArguments.push(newArgument);
            }

            renderArguments();
            updateScores();
        }

        function deleteArgument(type, id) {
            if (type === 'pro') {
                proArguments = proArguments.filter(arg => arg.id !== id);
            } else {
                contraArguments = contraArguments.filter(arg => arg.id !== id);
            }
            renderArguments();
            updateScores();
        }

        function updateArgument(type, id, field, value) {
            const arguments = type === 'pro' ? proArguments : contraArguments;
            const argument = arguments.find(arg => arg.id === id);
            if (argument) {
                argument[field] = value;
                updateScores();
            }
        }

        function renderArguments() {
            renderArgumentList('pro', proArguments);
            renderArgumentList('contra', contraArguments);
        }

        function renderArgumentList(type, arguments) {
            const container = document.getElementById(type + 'Arguments');
            
            if (arguments.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <p><strong>Noch keine ${type === 'pro' ? 'Pro' : 'Contra'}-Argumente hinzugef√ºgt.</strong></p>
                        <p>Klicke auf "Argument hinzuf√ºgen" um zu beginnen.</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = arguments.map(arg => `
                <div class="argument-card ${type}">
                    <div class="argument-header">
                        <input
                            type="text"
                            placeholder="Argument Titel"
                            value="${arg.title || ''}"
                            onchange="updateArgument('${type}', ${arg.id}, 'title', this.value)"
                            class="argument-title"
                        />
                        <button
                            onclick="deleteArgument('${type}', ${arg.id})"
                            class="delete-btn"
                            title="L√∂schen"
                        >
                            üóëÔ∏è
                        </button>
                    </div>
                    
                    <textarea
                        placeholder="Beschreibung des Arguments..."
                        onchange="updateArgument('${type}', ${arg.id}, 'description', this.value)"
                        class="argument-description"
                    >${arg.description || ''}</textarea>
                    
                    <div class="argument-footer">
                        <span class="points-label">Gewichtung:</span>
                        <select
                            onchange="updateArgument('${type}', ${arg.id}, 'points', parseInt(this.value))"
                            class="points-select"
                        >
                            <option value="1" ${arg.points === 1 ? 'selected' : ''}>1 Punkt (niedrig)</option>
                            <option value="2" ${arg.points === 2 ? 'selected' : ''}>2 Punkte (mittel)</option>
                            <option value="3" ${arg.points === 3 ? 'selected' : ''}>3 Punkte (hoch)</option>
                            <option value="5" ${arg.points === 5 ? 'selected' : ''}>5 Punkte (sehr hoch)</option>
                        </select>
                    </div>
                </div>
            `).join('');
        }

        function updateScores() {
            const proScore = proArguments.reduce((total, arg) => total + (arg.points || 0), 0);
            const contraScore = contraArguments.reduce((total, arg) => total + (arg.points || 0), 0);
            
            document.getElementById('proScore').textContent = proScore;
            document.getElementById('contraScore').textContent = contraScore;
            document.getElementById('proCount').textContent = `${proArguments.length} Argumente`;
            document.getElementById('contraCount').textContent = `${contraArguments.length} Argumente`;
            
            const difference = Math.abs(proScore - contraScore);
            document.getElementById('difference').textContent = `Differenz: ${difference}`;
            
            let winner = 'Unentschieden';
            if (proScore > contraScore) {
                winner = 'PRO gewinnt';
            } else if (contraScore > proScore) {
                winner = 'CONTRA gewinnt';
            }
            document.getElementById('winner').textContent = winner;
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            updateScores();
            renderArguments();
        });
    </script>
</body>
</html>
